@model IEnumerable<StadionStats.ViewModels.StatViewModels.LigaGroup>

@{
    ViewData["Title"] = "Ligastatistik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header id="header" class="ex-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Ligastatistik</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Statistik</span><i class="fa fa-angle-double-right"></i><span>Ligastatistik</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="stadionspec-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-container">
                    <br /><br />
                    <!-- Google Chart - tilskuersnit -->
                    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                    <script type="text/javascript">
                        google.charts.load("current", { packages: ['corechart'] });
                        google.charts.setOnLoadCallback(drawChart);
                        function drawChart() {
                            var data = google.visualization.arrayToDataTable([
                                ['Klub', 'Snit', { role: 'style' }],

                                  @foreach (var item in Model.OrderByDescending(item => item.HomeAvg))
                                    {
                                    <text>
                                ['@item.LigaName', @item.HomeAvg, "#263748"],
                                    </text>
                                    }
                              ]);

                            var view = new google.visualization.DataView(data);
                            view.setColumns([0, 1,
                                {
                                    calc: "stringify",
                                    sourceColumn: 1,
                                    type: "string",
                                    role: "annotation"
                                },
                                2]);

                            var options = {
                                title: "Tilskuertal i snit for alle ligaer",
                                width: "95%",
                                height: 400,
                                bar: { groupWidth: "95%" },
                                legend: { position: "none" },
                                backgroundColor: {
                                    fill: '#b6daf0',
                                },
                            };
                          var chart = new google.visualization.BarChart(document.getElementById("barchart_values"));
                          chart.draw(view, options);
                      }
                    </script>
                    <div id="barchart_values" style="width: 100%; height: 400px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<br /><br />
<div class="container">
    <div class="row">
        <div class="col-lg-1">
        </div>
        <div class="col-lg-10">
            <div class="text-container">
                <div class="statlist-big-sub">

                    <div class="statlistRow-big-sub">
                        <div class="statlistCell-big-head-sub"></div>
                        <div class="statlistCell-big-head-sub">Liga</div>
                        <div class="statlistCell-big-head-sub"><b>Kampe</b></div>
                        <div class="statlistCell-big-head-sub"><b>Total</b></div>
                        <div class="statlistCell-big-head-sub"><b>Snit</b></div>
                    </div>

                    @foreach (var item in Model.OrderByDescending(item => item.HomeAvg))
                    {

                        <div class="statlistRow-big-sub">
                            <div class="statlistCell-big-sub"><img style="height:50px;" src="~/images/logo/@Html.DisplayFor(modelItem => item.LigaLogo)" alt="@Html.DisplayFor(modelItem => item.LigaName)"></div>
                            <div class="statlistCell-big-sub"><b>@Html.DisplayFor(modelItem => item.LigaName)</b></div>
                            <div class="statlistCell-big-sub">@item.LigaCount</div>
                            <div class="statlistCell-big-sub">@item.HomeTotal</div>
                            <div class="statlistCell-big-sub">@item.HomeAvg</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-1">
        </div>
    </div>
</div>
<br /><br />