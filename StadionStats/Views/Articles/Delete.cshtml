@model StadionStats.Models.Article

@{
    ViewData["Title"] = "Admin - Slet artikel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Slet artikel</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Articles">Artikler</a><i class="fa fa-angle-double-right"></i><span>Slet artikel</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Er du sikker på at du vil slette?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TeaserText)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TeaserText)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Image)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Image)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Text)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Text)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ExternalLink)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ExternalLink)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ReadmoreLink)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ReadmoreLink)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ArticleID" />
                <input type="submit" value="Slet" class="btn btn-danger" /> |
                <a asp-action="Index">Tilbage til oversigten</a>
            </form>
            <br /><br />
        </div>
    </div>
</div>
