@model StadionStats.Models.Article

@{
    ViewData["Title"] = "Admin - Rediger artikel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Rediger artikel</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Articles">Artikler</a><i class="fa fa-angle-double-right"></i><span>Rediger artikel</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ArticleID" />
                <div class="form-group">
                    <label asp-for="Date" class="control-label">Dato</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Titel</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeaserText" class="control-label">Teasertekst</label>
                    <input asp-for="TeaserText" class="form-control" />
                    <span asp-validation-for="TeaserText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Billede</label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Text" class="control-label">Tekst</label>
                    <textarea asp-for="Text" class="form-control" cols="100" rows="16"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExternalLink" class="control-label">Eksternt link</label>
                    <input asp-for="ExternalLink" class="form-control" />
                    <span asp-validation-for="ExternalLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReadmoreLink" class="control-label">Læs mere link</label>
                    <input asp-for="ReadmoreLink" class="form-control" />
                    <span asp-validation-for="ReadmoreLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gem" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">TIlbage til oversigt</a><br /><br />
    </div>
</div>
