@model StadionStats.Models.Sponsor

@{
    ViewData["Title"] = "Admin - Sponsorartikel detaljer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="header" class="ex-header">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>@Html.DisplayFor(model => model.Title)</h1>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SponsorText)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SponsorText)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Team2)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Team2.Id)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.SponsorID">Rediger</a> |
            <a asp-action="Index">Tilbage til oversigten</a>
        </div>
    </div>
</div>
