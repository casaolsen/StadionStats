@model IEnumerable<StadionStats.Models.Sponsor>

@{
    ViewData["Title"] = "Admin - Sponsorartikler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="header" class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Sponsorartikler</h1>
                @if (User.IsInRole("Admin"))
                {
                    <p>
                        <a asp-action="Create"><b>Opret ny sponsorartikel</b></a>
                    </p>
                }
            </div>
        </div>
    </div>
</header>
<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><span>Sponsorartikler</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Titel
                        </th>
                        <th>
                            Hold
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.SponsorID">@Html.DisplayFor(modelItem => item.Title)</a>
</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Team2.Name)
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.SponsorID">Slet</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>