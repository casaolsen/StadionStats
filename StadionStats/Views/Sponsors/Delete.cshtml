@model StadionStats.Models.Sponsor

@{
    ViewData["Title"] = "Admin - Slet sponsorartikel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="header" class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Slet sponsorartikel</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Sponsors">Sponsorartikler</a><i class="fa fa-angle-double-right"></i><span>Slet @Html.DisplayFor(model => model.Title)</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Er du sikker på at du vil slette?</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.SponsorText)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SponsorText)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="SponsorID" />
                    <input type="submit" value="Slet" class="btn btn-danger" /> |
                    <a asp-action="Index">Tilbage til oversigten</a>
                </form>
                <br /><br />
            </div>
        </div>

    </div>
</div>

