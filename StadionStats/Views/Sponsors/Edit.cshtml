@model StadionStats.Models.Sponsor

@{
    ViewData["Title"] = "Admin - Rediger sponsorartikel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="header" class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Rediger sponsorartikel</h1>
            </div>
        </div>
    </div>
</header>
<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Sponsors">Sponsorartikler</a><i class="fa fa-angle-double-right"></i><span>Rediger @Html.DisplayFor(model => model.Title)</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SponsorID" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Titel</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SponsorText" class="control-label">Tekst</label>
                    <textarea asp-for="SponsorText" class="form-control" cols="100" rows="16"></textarea>
                    <span asp-validation-for="SponsorText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Team2ID" class="control-label">Hold</label>
                    <select asp-for="Team2ID" class="form-control" asp-items="ViewBag.Team2ID"></select>
                    <span asp-validation-for="Team2ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gem" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tilbage til oversigten</a><br /><br />
    </div>
</div>
