@model IEnumerable<StadionStats.ViewModels.StatViewModels.HjemmekampeCount>

<div class="statlist">
    @foreach (var item in Model.OrderByDescending(item => item.HomeAvg).Take(3))
    {
        <div class="statlist">
            <div class="statlistCellLogo">
                <img class="img-responsive-frontpage-logo" src="~/images/logo/@Html.DisplayFor(modelItem => item.TeamImage)" alt="@Html.DisplayFor(modelItem => item.HomeTeamName)">
            </div>
            <div class="statlistCell"><a href="/Team2/Details/@Html.DisplayFor(modelItem => item.HomeTeam)">@item.HomeTeamName</a></div>
            <div class="statlistCell">@item.HomeAvg i snit</div>
        </div>
    }
</div>