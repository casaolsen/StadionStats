@model StadionStats.Models.Liga

@{
    ViewData["Title"] = "Admin - Slet liga";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Slet liga</h1>
            </div>
        </div>
    </div>
</header>
<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Liga">Ligaer</a><i class="fa fa-angle-double-right"></i><span>Slet @Html.DisplayFor(model => model.Navn)</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Navn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Navn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Land)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Land.Landenavn)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="LigaID" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Tilbage til oversigt</a>
            </form>
            <br /><br />
        </div>
    </div>
</div>