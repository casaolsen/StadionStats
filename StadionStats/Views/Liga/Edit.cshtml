@model StadionStats.Models.Liga

@{
    ViewData["Title"] = "Admin - Rediger liga";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Rediger liga</h1>
            </div>
        </div>
    </div>
</header>
<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Liga">Ligaer</a><i class="fa fa-angle-double-right"></i><span>Rediger @Html.DisplayFor(model => model.Navn)</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="LigaID" />
                <div class="form-group">
                    <label asp-for="Navn" class="control-label">Liga navn</label>
                    <input asp-for="Navn" class="form-control" />
                    <span asp-validation-for="Navn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label">Logo</label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LandID" class="control-label">Land</label>
                    <select asp-for="LandID" class="form-control" asp-items="ViewBag.LandID"></select>
                    <span asp-validation-for="LandID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tilbage til oversigten</a><br /><br />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
