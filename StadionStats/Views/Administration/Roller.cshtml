@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Admin - Alle roller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Roller</h1>
                <p>
                    <a asp-action="OpretRolle">Opret ny rolle</a>
                </p>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><span>Roller</span>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Rolle
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.Any())
                    {

                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>
                                    @role.Name
                                </td>
                                <td>
                                    <a asp-action="RedigerRolle" asp-controller="Administration" asp-route-id="@role.Id">Rediger</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                Ingen roller
                            </td>
                            <td>
                                <a asp-action="OpretRolle" asp-controller="Administration">Opret rolle</a>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
            <br /><br />
        </div>
    </div>
</div>
