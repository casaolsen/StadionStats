@model StadionStats.ViewModels.RedigerRollerViewModel

@{
    ViewData["Title"] = "Admin - Rediger rolle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Rediger rolle</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Administration/Roller">Roller</a><i class="fa fa-angle-double-right"></i><span>Rediger Rolle</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                @*<div class="form-group">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" disabled />
                    </div>*@
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label">Rollenavn</label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Opdater</button>
                </div>

            </form>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Brugere i rollen:
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.Users.Any())
                    {

                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    @user
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                Ingen brugere
                            </td>
                        </tr>

                    }

                </tbody>
            </table>

            <a asp-action="AdminRolleBrugere" asp-controller="Administration" asp-route-roleId="@Model.Id">Rediger brugere i rollen</a><br /><br />

        </div>
    </div>
</div>
