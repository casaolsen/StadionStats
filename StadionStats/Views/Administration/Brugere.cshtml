@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Admin - Alle brugere";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Brugere</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><span>Brugere</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Bruger
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model.Any())
                    {

                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    @user.UserName
                                </td>
                                <td>
                                    <a asp-action="RedigerBruger" asp-controller="Administration" asp-route-id="@user.Id">Rediger</a> |
                                    <a asp-action="SletBruger" asp-controller="Administration" asp-route-id="@user.Id">Slet</a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td>
                                Ingen brugere
                            </td>
                            <td></td>
                        </tr>

                    }

                </tbody>
            </table>
            <br /><br />
        </div>
    </div>
</div>

