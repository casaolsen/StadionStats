@model StadionStats.Models.Game

@{
    ViewData["Title"] = "Admin - Rediger kamp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Rediger kamp</h1>
            </div>
        </div>
    </div>
</header>

<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><span>Administration</span><i class="fa fa-angle-double-right"></i><a href="/Games">Kampe</a><i class="fa fa-angle-double-right"></i><span>Rediger kamp</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Date" class="control-label">Dato</label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeTeamId" class="control-label">Hjemmehold</label>
                    <select asp-for="HomeTeamId" class="form-control" asp-items="ViewBag.HomeTeamId"></select>
                    <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwayTeamId" class="control-label">Udehold</label>
                    <select asp-for="AwayTeamId" class="form-control" asp-items="ViewBag.AwayTeamId"></select>
                    <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeScore" class="control-label">Hjemmehold score</label>
                    <input asp-for="HomeScore" class="form-control" />
                    <span asp-validation-for="HomeScore" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GuestScore" class="control-label">Udehold score</label>
                    <input asp-for="GuestScore" class="form-control" />
                    <span asp-validation-for="GuestScore" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Attendance" class="control-label">Tilskuertal</label>
                    <input asp-for="Attendance" class="form-control" />
                    <span asp-validation-for="Attendance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tv" class="control-label">TV seere</label>
                    <input asp-for="Tv" class="form-control" />
                    <span asp-validation-for="Tv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StadionID" class="control-label">Stadion</label>
                    <select asp-for="StadionID" class="form-control" asp-items="ViewBag.StadionID"></select>
                    <span asp-validation-for="StadionID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LigaID" class="control-label">Liga</label>
                    <select asp-for="LigaID" class="form-control" asp-items="ViewBag.LigaID"></select>
                    <span asp-validation-for="LigaID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IsCorona" class="control-label">Corona restriktioner?</label>
                    <input asp-for="IsCorona" class="form-control" />
                    <span asp-validation-for="IsCorona" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Gem" class="btn btn-primary" />
                </div>
            </form>
            <a asp-action="Index">Tilbage til oversigt</a><br /><br />
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
