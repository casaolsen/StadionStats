@model StadionStats.Models.Team2

@{
    ViewData["Title"] = "Admin - Opret klub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<header class="ex-header-admin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Opret klub</h1>
            </div>
        </div>
    </div>
</header>


<!-- Breadcrumb -->
<div class="breadcrumbs-admin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text">
                    <a href="/">Forside</a><i class="fa fa-angle-double-right"></i><a href="/Team2">Klubber</a><i class="fa fa-angle-double-right"></i><span>Opret klub</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Navn</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Adresse</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StadionID" class="control-label">Stadion</label>
                    <select asp-for="StadionID" class="form-control" asp-items="ViewBag.StadionID"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Seasontickets" class="control-label">Solgte sæsonkort</label>
                    <input asp-for="Seasontickets" class="form-control" />
                    <span asp-validation-for="Seasontickets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label">Billede</label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label">Logo</label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sponsortext" class="control-label">Tekst til sponsorsektion</label>
                    <textarea asp-for="Sponsortext" class="form-control" cols="100" rows="16"></textarea>
                    <span asp-validation-for="Sponsortext" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LigaID" class="control-label">Liga</label>
                    <select asp-for="LigaID" class="form-control" asp-items="ViewBag.LigaID"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Opret" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Tilbage til oversigten</a><br /><br />
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
